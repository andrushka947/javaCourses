<?xml version="1.0" encoding="UTF-8"?>

<Context antiJARLocking="true" path="/">
    <Resource
            name="jdbc/web4"
            author="Container"
            type="javax.sql.DataSource"
            maxActive="16"
            maxIdle="8"
            maxWait="10000"
            username="root"
            password="pass"
            driverClassName="com.mysql.jdbc.Driver"
            connectionProperties = "useUnicode=yes;characterEncoding=UTF-8;allowMultiQueries=true;useSSL=false;useLegacyDatetimeCode=false;serverTimezone=UTC"
            url="jdbc:mysql://localhost:3306/web4"
    />
</Context>