<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">

	<servlet>
		<servlet-name>Index</servlet-name>
		<servlet-class>com.courses.controller.Controller</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Index</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>AppEdit</servlet-name>
		<servlet-class>com.courses.controller.ApplianceEdit</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AppEdit</servlet-name>
		<url-pattern>/appliances/changeState</url-pattern>
	</servlet-mapping>

</web-app>
